{
  "name": "jobs",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "start": "run-s build start:dist",
    "start:dist": "node dist",
    "build": "run-s build:clean build:start",
    "build:clean": "rimraf ./dist",
    "build:start": "tsc",
    "dev": "run-p dev:build dev:watch",
    "dev:build": "tsc -w",
    "dev:watch": "nodemon --watch dist --delay 5 dev:start",
    "dev:start": "node dist"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "firebase-admin": "^10.2.0",
    "get-port": "^6.1.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.0",
    "vm2": "^3.9.9",
    "ws": "^8.7.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.37",
    "@types/ws": "^8.5.3",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.2"
  }
}
