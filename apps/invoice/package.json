{
  "name": "invoice",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "start": "run-s build start:dist",
    "start:dist": "node dist",
    "build": "run-s build:clean build:start",
    "build:clean": "rimraf ./dist",
    "build:start": "tsc",
    "dev": "run-p dev:build dev:watch",
    "dev:build": "tsc -w",
    "dev:watch": "nodemon --watch dist --delay 5 dev:start",
    "dev:start": "node dist"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "firebase-admin": "^10.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.37",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.2"
  }
}
