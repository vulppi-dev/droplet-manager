{
  "name": "@vulppi/droplet-manager",
  "version": "0.2.2",
  "type": "module",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "start": "run-s build:prepare build start:prepare start:dist",
    "start:prepare": "npm i",
    "start:dist": "node dist",
    "build": "run-s build:clean build:start",
    "build:prepare": "npm i --production=false --force",
    "build:clean": "rimraf ./dist ./uploads.tmp",
    "build:start": "tsc",
    "dev": "run-p dev:build dev:watch",
    "dev:build": "tsc -w",
    "dev:watch": "nodemon --watch dist --delay 1 -r dotenv/config dist"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "cron": "^2.0.0",
    "express": "^4.18.1",
    "firebase-admin": "^11.0.0",
    "get-port": "^6.1.2",
    "http-status-codes": "^2.2.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.1",
    "vm2": "^3.9.9",
    "ws": "^8.8.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/cron": "^2.0.0",
    "@types/express": "^4.17.13",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.0.0",
    "@types/ws": "^8.5.3",
    "dotenv": "^16.0.1",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  }
}
